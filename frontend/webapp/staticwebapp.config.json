{
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {
          "openIdIssuer": "https://login.microsoftonline.com/{TENANT_ID}/v2.0",
          "clientIdSettingName": "AZURE_CLIENT_ID"
        }
      }
    }
  },
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated", "anonymous"]
    },
    {
      "route": "/.auth/login/aad",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/.auth/me",
      "allowedRoles": ["authenticated", "anonymous"]
    }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/.auth/login/aad",
      "statusCode": 302
    }
  },
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/api/*",
      "/resources/*.js",
      "/resources/*.css",
      "/resources/*.json",
      "/resources/*.xml",
      "/resources/*.properties",
      "/resources/sap/*",
      "/resources/sap/ui/*",
      "/resources/sap/ui/core/*",
      "/resources/sap/ui/unified/*",
      "/resources/sap/ui/layout/*",
      "/resources/sap/m/*",
      "/resources/sap/f/*",
      "/resources/sap/uxap/*",
      "/resources/sap/base/*",
      "/i18n/*",
      "/model/*",
      "/modules/*",
      "/pages/*",
      "/services/*",
      "*.js",
      "*.css",
      "*.map",
      "*.json",
      "*.xml",
      "*.properties",
      "*.svg",
      "*.png",
      "*.gif",
      "*.woff",
      "*.woff2"
    ]
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "application/javascript",
    ".css": "text/css",
    ".xml": "application/xml",
    ".properties": "text/plain",
    ".svg": "image/svg+xml",
    ".woff": "font/woff",
    ".woff2": "font/woff2"
  }
}
