<mvc:View
  controllerName="netz.fund.os.App"
  displayBlock="true"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns="sap.m"
  xmlns:f="sap.f"
>
  <VBox height="100%" width="100%">
    <f:ShellBar id="shellBar" title="Netz Fund OS" showMenuButton="false" />

    <SplitContainer id="split" mode="ShowHideMode" backgroundDesign="Solid">
      <masterPages>
        <Page title="Navigation" showHeader="true">
          <List id="navList" mode="SingleSelectMaster" selectionChange="onNavSelectionChange">
            <StandardListItem title="Dashboard" type="Navigation">
              <customData>
                <core:CustomData key="route" value="dashboard" writeToDom="false" />
              </customData>
            </StandardListItem>
            <StandardListItem title="Data Room" type="Navigation">
              <customData>
                <core:CustomData key="route" value="dataroom" writeToDom="false" />
              </customData>
            </StandardListItem>
            <StandardListItem title="Cash Management" type="Navigation">
              <customData>
                <core:CustomData key="route" value="cash" writeToDom="false" />
              </customData>
            </StandardListItem>
            <StandardListItem title="Compliance" type="Navigation">
              <customData>
                <core:CustomData key="route" value="compliance" writeToDom="false" />
              </customData>
            </StandardListItem>
            <StandardListItem title="Fund Copilot" type="Navigation">
              <customData>
                <core:CustomData key="route" value="copilot" writeToDom="false" />
              </customData>
            </StandardListItem>
            <StandardListItem title="Reporting" type="Navigation">
              <customData>
                <core:CustomData key="route" value="reporting" writeToDom="false" />
              </customData>
            </StandardListItem>
            <StandardListItem title="Director Signature Workflow" type="Navigation">
              <customData>
                <core:CustomData key="route" value="signatures" writeToDom="false" />
              </customData>
            </StandardListItem>
          </List>
        </Page>
      </masterPages>

      <detailPages>
        <NavContainer id="detailNav" />
      </detailPages>
    </SplitContainer>
  </VBox>
</mvc:View>

